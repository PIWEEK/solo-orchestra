{
  "title": "PIWEEK demo",
  "inputs": [
    {
      "id": "keyboard",
      "title": "Midi keyboard",
      "portName": "CHMidi-2.3 MIDI 1",
      "channels": [
        {"id": "kbd", "channel": 1}
      ]
    },
    {
      "id": "virtual-keyboard",
      "title": "Virtual keyboard",
      "portName": "out",
      "channels": [
        {"id": "kbd", "channel": 1}
      ]
    }
  ],
  "outputs": [
    {
      "id": "qsynth1",
      "title": "Qsynth1",
      "portName": "Synth input port (Qsynth1:0)",
      "channels": [
        {"id": "strings", "channel": 1},
        {"id": "saw-wave", "channel": 2},
        {"id": "bass-lead", "channel": 3},
        {"id": "muted-guitar", "channel": 4},
        {"id": "picked-bass", "channel": 5}
      ]
    }
  ],
  "songs": [
    {
      "id": "dawn",
      "title": "Dawn (by Kebu)",
      "groups": [
        {
          "id": "presets",
          "title": "Presets",
          "exclusive": true,
          "default": true,

          "presets": [
            {
              "id": "intro",
              "title": "Intro",
              "maps": [
                {
                  "comments": "Map lower half of kbd to strings raised 2 octaves",
                  "source": {
                    "deviceId": "keyboard",
                    "channel": "kbd",
                    "eventType": "note",
                    "noteMin": 0,
                    "noteMax": 59
                  },
                  "dest": {
                    "deviceId": "qsynth1",
                    "channel": "strings",
                    "eventType": "note",
                    "noteMin": 24
                  }
                },
                {
                  "comments": "Map upper half of kbd to bass lead",
                  "source": {
                    "deviceId": "keyboard",
                    "channel": "kbd",
                    "eventType": "note",
                    "noteMin": 60,
                    "noteMax": 127
                  },
                  "dest": {
                    "deviceId": "qsynth1",
                    "channel": "bass-lead",
                    "eventType": "note"
                  }
                },
                {
                  "comments": "May any other kbd event to qsynth1",
                  "source": {
                    "deviceId": "keyboard"
                  },
                  "dest": {
                    "deviceId": "qsynth1"
                  }
                }
              ]
            }
          ]
        }
      ]
    }
  ]
}
